{
  "manifest_version": 3,
  "name": "DocuGuide",
  "version": "1.0.0",
  "description": "Your intelligent legal documents assistant. Understand complex legal documents, get clause explanations, risk assessments, and plain-English translations - all processed privately on your device using Chrome's built-in AI.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>", "file:///*"],
      "js": [
        "content/form-detector.js",
        "content/form-guide.js",
        "content/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
            "default_title": "DocuGuide - Legal Documents Assistant"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
